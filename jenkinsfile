pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Deploy to Render') {
            steps {
                sh 'node server.js'
            }

         stage('Run Tests') {
            steps {
                sh 'npm test'
            }
         }
        }
    }
   post {
    failure {
        mail to: 'derrick.kisio@student.moringaschool.com',
             subject: "FAILED: ${currentBuild.fullDisplayName}",
             body: "Tests failed in ${env.BUILD_URL}" [5]
    }
}