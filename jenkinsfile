pipeline {
    agent any

    environment {
        RENDER_URL = 'https://jenkins-pipeline-4nha.onrender.com'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Deploy to Render') {
            steps {
                sh 'node server.js'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }
    }

    // post {
