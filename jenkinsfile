pipeline {
    agent any

    environment {
        RENDER_DEPLOY_HOOK = 'https://jenkins-pipeline-4nha.onrender.com/deploy-hook' // Replace if needed
    }

    stages {
        stage('Setup Node') {
            steps {
                sh '''
                  curl -fsSL https://deb.nodesource.com/setup_18.x | sudo -E bash -
                  sudo apt-get install -y nodejs
                  node -v
                  npm -v
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy to Render') {
            steps {
                sh "curl -X POST ${env.RENDER_DEPLOY_HOOK}"
            }
        }

        stage('Notify Slack') {
            steps {
                script {
                    slackSend channel: '#derrick_ip1',
                              message: "✅ Build ${env.BUILD_ID} passed! View deployed app here: https://jenkins-pipeline-4nha.onrender.com"
                }
            }
        }
    }

    post {
        success {
            mail to: 'derrickkisio@gmail.com',
                 subject: '✅ Build Successful',
                 body: 'The pipeline completed successfully.'
        }
        failure {
            mail to: 'derrickkisio@gmail.com',
                 subject: '❌ Build Failed',
                 body: 'The pipeline failed. Please check the Jenkins logs.'
        }
    }
}
