pipeline {
    agent any
     options {
        timeout(time: 10, unit: 'MINUTES')  
        retry(3)  
    }

    environment {
        RENDER_DEPLOY_HOOK = 'https://jenkins-pipeline-4nha.onrender.com/deploy-hook'
    }

    tools {
        nodejs 'Node v18.19.1' 
    }

    stages {
        stage('Install Dependencies') {
            steps {
                npm 'install'
            }
        }

        stage('Run Tests') {
            steps {
                npm 'test'
            }
        }

        // stage('Deploy to Render') {
        //     steps {
        //         sh 'node server.js' 
        //     }
        // }

        stage('Notify Slack') {
            steps {
                script {
                    slackSend channel: '#derrick_ip1',
                              message: "✅ Build ${env.BUILD_ID} passed! View deployed app here: https://jenkins-pipeline-4nha.onrender.com",
                              baseUrl:"https://hooks.slack.com/services/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"
                }
            }
        }
    }

    post {
        success {
            mail to: 'derrickkisio@gmail.com',
                 subject: '✅ Build Successful',
                 body: 'The pipeline completed successfully.'
        }
        failure {
            mail to: 'derrickkisio@gmail.com',
                 subject: '❌ Build Failed',
                 body: 'The pipeline failed. Please check the Jenkins logs.'
        }
    }
}
